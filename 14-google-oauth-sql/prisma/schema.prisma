generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_auth {
  id              Int                 @id @default(autoincrement())
  user_id         Int
  auth_type       user_auth_auth_type
  auth_provide    String?             @db.VarChar(45)
  auth_provide_id String?             @db.VarChar(100)
  auth_email      String?             @db.VarChar(45)
  password_hash   String?             @db.VarChar(255)
  created_at      DateTime?           @default(now()) @db.Timestamp(0)
  last_login      DateTime?           @db.Timestamp(0)
  users           users               @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user-auth")

  @@index([user_id], map: "fk_user-auth_idx")
}

model users {
  id         Int         @id @default(autoincrement())
  email      String      @unique(map: "email_UNIQUE") @db.VarChar(45)
  username   String      @db.VarChar(45)
  created_at DateTime?   @default(now()) @db.Timestamp(0)
  updated_at DateTime?   @default(now()) @db.Timestamp(0)
  is_active  Boolean?    @default(true)
  phone      String?     @db.VarChar(20)
  user_auth  user_auth[]
}

enum user_auth_auth_type {
  local
  oauth
}
